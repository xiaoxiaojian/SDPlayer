<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip" >

    <ImageView
        android:id="@+id/iv_vidolist_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:src="@drawable/video_icon" />

    <TextView
        android:id="@+id/tv_videolist_name"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_vidolist_icon"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="视频的名称"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_videolist_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_videolist_name"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/iv_vidolist_icon"
        android:text="视频的长度"
        android:textColor="#66000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_videolist_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:text="视频的大小"
        android:textColor="#66000000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="#66ffffff" />

</RelativeLayout>